@using System.Web.Mvc.Html

@model HelloWorld.Extentions.Models.CoursePart
<fieldset>
    <legend>Course Fields</legend>

    <div class="editor-label">@Html.LabelFor(x => x.Name)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Name)
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="hint">Enter the course name</div>

    <div class="editor-label">@Html.LabelFor(x => x.Title)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Title)
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="hint">Enter the course title (a short text being displayed on main page)</div>

    <div class="editor-label">@Html.LabelFor(x => x.ShortDescription)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.ShortDescription)
        @Html.ValidationMessageFor(x => x.ShortDescription)
    </div>
    <div class="hint">Enter the course description (a text being on courses list page)</div>
</fieldset>